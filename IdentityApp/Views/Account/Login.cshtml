<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Bondroy</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="left-side"></div>
        <div class="right-side">
            <div class="login-box">
                <!-- Logo -->

                <img src="~/Images/Nazra Logo 3.png" alt="Nazra Logo" class="logo" style="width: 129px;height: auto;">

                <p style="color: #000000c2;font-family: system-ui;font-size: 23px;font-weight: 300;">Welcome back!</p>
                <form method="post">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="email" asp-for="Email" placeholder="name@email.com" required>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input type="password" asp-for="Password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <div class="options">
                        <label for="RememberMe" style="color: #000000b0;font-family: system-ui;font-size: 13px;" asp-for="RememberMe">
                            <input type="checkbox" id="RememberMe" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                        <a style="color: #000000b0;font-family: system-ui;font-size: 13px;" href="#">Reset password</a>
                    </div>
                    <button type="submit" style="font-family:system-ui;font-size: 18px;">
                        Sign in
                    </button>
                </form>
                <p class="signup-text" style="color: #000000b0;text-align: left;font-size: 13px;  font-family: system-ui;">
                    Don't have an account?
                    <a  style=" color: #000000b0;font-size: 14px;font-family: system-ui;" asp-controller="account" asp-action="register">Sign up</a>
                </p>
           
                  <div class="divider-container">
                    <div class="divider-line"></div>
                    <div class="divider-text">or</div>
                    <div class="divider-line"></div>
                </div>
 

                <div class="social-login">
                   

                    <button class="google-btn" style="color: #000000b0;font-family: system-ui;font-size: 13px;">
                        <img src="Images/icons8-google-48.png" alt="Google Icon">
                        Continue with Google
                    </button>
                    <button class="google-btn" style="color: #000000b0;font-family: system-ui;font-size: 13px;">
                        <img src="Images/icons8-instagram-48.png" alt="Insta Icon">
                        Continue with Instagram
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

