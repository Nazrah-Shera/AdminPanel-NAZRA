 @model IdentityApp.ViewModels.vm_AddUser

@{
    ViewData["Title"] = "User Management - Add User";

}

@section PageScripts {
    <script src="~/js/form-basic-inputs.js"></script>
}
@* ************** Content ************** *@

<form method="post" id="userForm">
<div class="card">
    <div class="card-body">

<div class="row g-12">

    <div class="col-md-6">
                <div class="mb-4">
                    <label for="defaultFormControlInput" class="form-label">Full Name</label>
                        <input asp-for="FullName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Nazrah Shera" aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
@*                     <div id="defaultFormControlHelp" class="form-text">We'll never share your details with anyone else.</div>
 *@                </div>
    </div>
    <div class="col-md-6">
                <div class="mb-4">
                    <label for="defaultFormControlInput" class="form-label">Username / Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="defaultFormControlInput" placeholder="nazrah@nazra.com" aria-describedby="defaultFormControlHelp" />

                        <span asp-validation-for="Email" class="text-danger"></span>
@*                     <div id="defaultFormControlHelp" class="form-text">We'll never share your details with anyone else.</div>
 *@                </div>
    </div>
    </div>

        <div class="row g-12">

            <div class="col-md-6">
                <div class="mb-4">
                    <label for="defaultFormControlInput" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="defaultFormControlInput" placeholder="Nazrah Shera" aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <div class="mb-4">
                        <label for="defaultSelect" class="form-label">Maximum Roles Allowed</label>
                        <select id="defaultSelect" asp-for="MaxRolesAllowed" class="form-select">
                            <option value="">Select</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                            <span asp-validation-for="MaxRolesAllowed" class="text-danger"></span>
                    </div>
                

                </div>
            </div>
        </div>



        <div class="row g-12">

            <div class="col-md-6">
                <div class="mb-4">
                    <label for="defaultFormControlInput" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="Nazrah Shera" aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    @*                     <div id="defaultFormControlHelp" class="form-text">We'll never share your details with anyone else.</div>
 *@                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label for="defaultFormControlInput" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPaaword" type="password" class="form-control" id="defaultFormControlInput" placeholder="nazrah@nazra.com" aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="ConfirmPaaword" class="text-danger"></span>
                    @*                     <div id="defaultFormControlHelp" class="form-text">We'll never share your details with anyone else.</div>
 *@                </div>
            </div>
        </div>

        <div class="row g-12">

            <div class="col-md-6">
                <div class="mt-6">

                    <div class="form-check form-switch mb-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status (Active/Not Active)</label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

             </div>
            </div>
            <div class="col-md-6">
                <div class="mt-0">

                    <div class="mb-4">
                        <label for="formFile" class="form-label">Profile Picture</label>
                        <input class="form-control" asp-for="ProfilePicture" type="file" id="formFile">
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                
                </div>
            </div>
        </div>





        <!--Buttons-->
        <div class="row g-12">
            <!-- Basic Buttons -->

            <div class="col-12">
             
                        <div class="demo-inline-spacing">
                        <button type="button" class="btn btn-success" id="btnAdd">ADD</button>
                            <button type="button" class="btn btn-danger">DELETE</button>
                            <button type="button" class="btn btn-warning">EDIT</button>
                            <button type="button" class="btn btn-info">CANCEL</button>
                        </div>
               
            </div>

        </div>

    </div>

</div>
    <!-- Hidden field to store the action type -->
    <input type="hidden" name="ActionType" id="ActionType" />

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/ApplicationUser.js"></script>